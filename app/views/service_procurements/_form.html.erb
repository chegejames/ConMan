<%= simple_form_for([@project, @service_procurement], html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :service, collection: @project.services %>
    <%= f.association :phase, collection: @project.phases %>
    <%= f.input :provider %>
    <%= f.input :date %>
    <%= f.input :cost %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", project_service_procurements_path(@project), class: "btn"%>
    <%= f.button :submit %>
  </div>
<% end %>
