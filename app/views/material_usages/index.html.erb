<div class="row-fluid">
<h1>Material Usage</h1>
<%= image_tag("plus.png")%><%= link_to 'Add Material used', new_project_material_usage_path(@project) %>
<table class="table table-hover table-condensed table-hover table-striped table-bordered">
  <tr>
    <th>Material</th>
    <th>Date</th>
    <th>Quantity</th>
    <th>Phase</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @material_usages.each do |material_usage| %>
  <tr>
    <td><%= material_usage.material.name %></td>
    <td><%= material_usage.date %></td>
    <td><%= pluralize(material_usage.quantity, material_usage.material.units_of_measurement) %></td>
    <td><%= material_usage.phase.name %></td>
    <td><%= material_usage.description %></td>
    <td><%= link_to 'Show', [@project, material_usage], class: "btn btn-mini btn-info" %></td>
    <td><%= link_to 'Edit', edit_project_material_usage_path(@project, material_usage), class: "btn btn-mini btn-warning" %></td>
    <td><%= link_to 'Destroy', [@project, material_usage], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />


</div>
