<%= simple_form_for([@project, @material_usage], html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :material, collection: @project.materials %>
    <%= f.input :date %>
    <%= f.input :quantity %>
    <%= f.association :phase, collection: @project.phases %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= link_to 'Cancel', project_material_usages_path(@project), class: "btn" %>
    <%= f.button :submit %>
  </div>
<% end %>
