<%set_meta_tags  :title => "Project:  #{@project.name}/Workers:#{@labourer.title}", :reverse => true%>
<div class="row-fluid labour">
<h2><%= @labourer.title %></h2>


<p>
  <b>Name:</b>
  <%= @labourer.name %>
</p>

<p>
  <b>Lowest estimated number of days:</b>
  <%= @labourer.lowest_estimated_number_of_days %>
</p>

<p>
  <b>Highest estimated number of days:</b>
  <%= @labourer.highest_estimated_number_of_days %>
</p>

<p>
  <b>Actual number of days:</b>
  <%= @labourer.actual_number_of_days %>
</p>

<p>
  <b>Lowest estimated cost per day:</b>
  <%= @labourer.lowest_estimated_cost_per_day %>
</p>

<p>
  <b>Highest estimated cost per day:</b>
  <%= @labourer.highest_estimated_cost_per_day %>
</p>

<p>
  <b>Avg cost per day:</b>
  <%= @labourer.avg_cost_per_day %>
</p>

<p>
  <b>Lowest estimated total cost:</b>
  <%= @labourer.lowest_estimated_total_cost %>
</p>

<p>
  <b>Highest estimated total cost:</b>
  <%= @labourer.highest_estimated_total_cost %>
</p>

<p>
  <b>Actual total cost:</b>
  <%= @labourer.actual_total_cost %>
</p>

<%= link_to image_tag("back.png"), project_labourers_path(@project), class: "btn" %> |
<%= link_to image_tag("pencil.png"), edit_project_labourer_path(@project, @labourer), class: "btn btn-warning" %> |
<%= link_to image_tag("close.png"), [@project, @labourer], method: :delete, data: {confirmation: "Are you sure"}, class: "btn btn-danger"%>

</div>
