<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags :site => 'Construction Managment App' %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <% if user_signed_in?%>
    <div class="navbar">
      <div class="navbar-inner">
         <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        <a class="brand" href="#"><%= Construction Managment App%></a>
         <div class="nav-collapse collapse">
        <ul class="nav pull-right">
          <li>
            <%= link_to "My Projects", projects_path%>
          </li>
          <li class="divider-vertical"></li>
          <li>
            <%= link_to current_project.name, current_project%>
          </li>
          <li class="divider-vertical"></li>
          <li>
          <%= link_to "Phases", project_phases_path(@project)%>
          </li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Material <b class="caret"></b> </a>
            <ul class="dropdown-menu">
              <li>
            <%= link_to "Materials", project_materials_path(@project)%>
          </li>
              <li>
            <%= link_to "Material procurement", project_material_procurements_path(@project)%>
          </li>
          <li>
            <%= link_to "Material usage", project_material_usages_path(@project)%>
          </li>
            </ul>


          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Services <b class="caret"></b> </a>
            <ul class="dropdown-menu">
          <li>
            <%= link_to "Services", project_services_path(@project)%>
          </li>
          <li>
            <%= link_to "Services Procurement", project_service_procurements_path(@project)%>
          </li>
          </li>
          </ul>
          <li class="divider-vertical"></li>
         <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Labour <b class="caret"></b> </a>
            <ul class="dropdown-menu">
          <li>
            <%= link_to "Labour estimates", project_labour_estimates_path(@project)%>
          </li>
          <li>
            <%= link_to "Workers", project_labourers_path(@project)%>
          </li>
          <li>
            <%= link_to "Wages", project_wages_path(@project)%>
          </li>
          </ul>
          <li class="divider-vertical"></li>
          <li>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete%>
          </li>


        </ul>
      </div>
      </div>
      </div>
    </div>

    <%end%>
    <div class="container-fluid">
      <% if notice.present?%>
      <p class="notice">
        <%= notice %>
      </p>
      <%end%>
      <% if alert.present?%>
      <p class="alert">
        <%= alert %>
      </p>
      <%end%>
      <%= yield %>
    </div>
  </body>
</html>
