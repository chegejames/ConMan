<!DOCTYPE html>
<html>
  <head>
    <title>ConMgt</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <% if user_signed_in?%>
    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="#"><%= current_user.first_name + current_user.last_name%></a>
        <ul class="nav pull-right">
          <li>
            <%= link_to "My Projects", projects_path%>
          </li>
          <li class="divider-vertical"></li>
          <li>
            <%= link_to @project.name, @project%>
          </li>
          <li class="divider-vertical"></li>
          <li>
          <%= link_to "Phases", project_phases_path(@project)%>
          </li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Material <b class="caret"></b> </a>
            <ul class="dropdown-menu">
              <li>
            <%= link_to "Materials", project_materials_path(@project)%>
          </li>
              <li>
            <%= link_to "Material procurement", project_material_procurements_path(@project)%>
          </li>
          <li>
            <%= link_to "Material usage", project_material_usages_path(@project)%>
          </li>
            </ul>


          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Services <b class="caret"></b> </a>
            <ul class="dropdown-menu">
          <li>
            <%= link_to "Services", project_services_path(@project)%>
          </li>
          <li>
            <%= link_to "Services Procurement", project_service_procurements_path(@project)%>
          </li>
          </li>
          </ul>
          <li class="divider-vertical"></li>
         <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Labour <b class="caret"></b> </a>
            <ul class="dropdown-menu">
          <li>
            <%= link_to "Labour estimates", project_labour_estimates_path(@project)%>
          </li>
          </ul>
          <li class="divider-vertical"></li>
          <li>
            <%= link_to "logout", destroy_user_session_path, method: :delete%>
          </li>

        </ul>
      </div>
    </div>

    <%end%>
    <div class="container-fluid">
      <% if notice.present?%>
      <p class="notice">
        <%= notice %>
      </p>
      <%end%>
      <% if alert.present?%>
      <p class="alert">
        <%= alert %>
      </p>
      <%end%>
      <%= yield %>
    </div>
  </body>
</html>
