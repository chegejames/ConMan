<%set_meta_tags  :title => "Project:  #{@project.name}/Service:#{@service.name}", :reverse => true%>
<div class="row-fluid service">
<h2>  <%= @service.name %></h2>
<p>
  <b>Lowest estimated number of services:</b>
  <%= @service.lowest_estimated_number_of_services %>
</p>

<p>
  <b>Highest estimated number of services:</b>
  <%= @service.highest_estimated_number_of_services %>
</p>

<p>
  <b>Actual number:</b>
  <%= @service.actual_number %>
</p>

<p>
  <b>Lowest estimated cost per service:</b>
  <%= @service.lowest_estimated_cost_per_service %>
</p>

<p>
  <b>Highest estimated cost per service:</b>
  <%= @service.highest_estimated_cost_per_service %>
</p>

<p>
  <b>Avg cost per service:</b>
  <%= @service.avg_cost_per_service %>
</p>

<p>
  <b>Total cost:</b>
  <%= @service.total_cost %>
</p>

<%= link_to image_tag("back.png"), project_services_path(@project), class: "btn" %> |
<%= link_to image_tag("pencil.png"), edit_project_service_path(@project, @service), class: "btn btn-warning" %> |
         <%= link_to image_tag("close.png"), [@project, @service], method: :delete, data: {confirmation: "Are you sure"}, class: "btn btn-danger"%>

</div>
