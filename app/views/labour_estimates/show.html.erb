<%set_meta_tags  :title => "Project:  #{@project.name}/Labour Estimate", :reverse => true%>
<div class="row-fluid labour">
<h2>Labour estimate</h2>
<p>
  <b>Lowest estimated number of days:</b>
  <%= @labour_estimate.lowest_estimated_number_of_days %>
</p>

<p>
  <b>Highest estimated number of days:</b>
  <%= @labour_estimate.highest_estimated_number_of_days %>
</p>

<p>
  <b>Actual number of days:</b>
  <%= @labour_estimate.actual_number_of_days %>
</p>

<p>
  <b>Lowest estimated number of men:</b>
  <%= @labour_estimate.lowest_estimated_number_of_men %>
</p>

<p>
  <b>Highest estimated number of men:</b>
  <%= @labour_estimate.highest_estimated_number_of_men %>
</p>

<p>
  <b>Actual number of men:</b>
  <%= @labour_estimate.actual_number_of_men %>
</p>

<p>
  <b>Lowest estimated cost per day:</b>
  <%= @labour_estimate.lowest_estimated_cost_per_day %>
</p>

<p>
  <b>Highest estimated cost per day:</b>
  <%= @labour_estimate.highest_estimated_cost_per_day %>
</p>

<p>
  <b>Avg cost per day:</b>
  <%= @labour_estimate.avg_cost_per_day %>
</p>

<p>
  <b>Lowest estimated total cost:</b>
  <%= @labour_estimate.lowest_estimated_total_cost %>
</p>

<p>
  <b>Highest estimated total cost:</b>
  <%= @labour_estimate.highest_estimated_total_cost %>
</p>

<p>
  <b>Actual total cost:</b>
  <%= @labour_estimate.actual_total_cost %>
</p>

<%= link_to image_tag("back.png"), project_labour_estimates_path(@project), class: "btn" %> |
<%= link_to image_tag("pencil.png"), edit_project_labour_estimate_path(@project, @labour_estimate), class: "btn btn-warning" %> |
         <%= link_to image_tag("close.png"), [@project, @labour_estimate], method: :delete, data: {confirmation: "Are you sure"}, class: "btn btn-danger"%>

</div>
